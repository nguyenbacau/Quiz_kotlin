<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="ImportFragment">

        <variable
            name="viewModel"
            type="com.co_well.quiz.ui.navigation_fragment.importt.ImportViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--        xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--        xmlns:app="http://schemas.android.com/apk/res-auto"-->
        <!--        xmlns:tools="http://schemas.android.com/tools"-->
        <!--        tools:context=".ui.importt.ImportFragment">-->

        <EditText
            android:id="@+id/edt_set_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="Subject, chapter, unit"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="TITLE"
            app:layout_constraintStart_toStartOf="@id/edt_set_name"
            app:layout_constraintTop_toBottomOf="@id/edt_set_name" />

        <Button
            android:id="@+id/btn_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_scan"
            android:drawablePadding="5dp"
            android:gravity="left|center"
            android:padding="5dp"
            android:text="Scan document"
            android:onClick="@{viewModel.buttonScanClick}"
            app:layout_constraintStart_toStartOf="@id/edt_set_name"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <Button
            android:id="@+id/btn_import"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_import"
            android:drawablePadding="5dp"
            android:gravity="left|center"
            android:padding="5dp"
            android:text="Import document"
            app:layout_constraintEnd_toEndOf="@id/edt_set_name"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
